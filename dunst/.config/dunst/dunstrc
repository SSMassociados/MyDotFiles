[global]
    ### DISPLAY ###

    monitor = 0
    follow = none
    
    # width = (0, 300) # largura dinâmica de 0 a 300
    # height = (0,300) # A altura máxima de uma única notificação, excluindo o quadro.
    width = 210 # largura
    height = 70 # altura máxima
    origin = top-right # Posição da notificação
    offset = 3x25 # Deslocamento horizontal e vertical em pixels, X e Y, largura e altura
    scale = 0
    notification_limit = 0
    shrink = no

    ### PROGRESS BAR ###

    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300
    progress_bar_corner_radius = 5
    indicate_hidden = yes
    transparency = 10
    separator_height = 1
    padding = 8
    horizontal_padding = 8
    text_icon_padding = 0
    frame_width = 2
    #frame_color = "#458588"
    gap_size = 4
    separator_color = frame
    sort = yes
    #idle_threshold = 120

    ### TEXT ###

    font = System San Francisco Display 9 
    line_height = 0
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    #word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### ICONS ###

    icon_position = left
    min_icon_size = 0
    max_icon_size = 32
    icon_corner_radius = 0
    icon_path = /usr/share/icons/gnome/24x24/status/:/usr/share/icons/gnome/24x24/devices/

    ### HISTORY ###

    sticky_history = yes
    history_length = 20

    ### MISC/ADVANCED ###

    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/firefox -new-tab
    #browser = /usr/bin/xdg-open
    always_run_script = true
    title = Dunst
    class = Dunst
    corner_radius = 7
    ignore_dbusclose = false

    ### WAYLAND ###

    force_xwayland = true

    ### LEGACY ###
    
    force_xinerama = false

    ### MOUSE ###
    
    mouse_left_click = do_action
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

[experimental]
    per_monitor_dpi = true

